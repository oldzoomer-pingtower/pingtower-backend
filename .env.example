# PingTower Environment Configuration
#
# Скопируйте этот файл в .env и заполните значениями
# для вашей среды

# ========================================
# Основные настройки
# ========================================

# Домен приложения
DOMAIN=localhost

# Профиль Spring Boot
SPRING_PROFILES_ACTIVE=docker

# ========================================
# База данных PostgreSQL
# ========================================

POSTGRES_USER=pingtower
POSTGRES_PASSWORD=pingtower
POSTGRES_DB=pingtower

# ========================================
# Cassandra (для сервиса statistics)
# ========================================

CASSANDRA_KEYSPACE=pingtower_statistics
CASSANDRA_REPLICATION_FACTOR=1

# ========================================
# Redis настройки
# ========================================

REDIS_PASSWORD=pingtower

# ========================================
# Kafka настройки (RedPanda)
# ========================================

KAFKA_BOOTSTRAP_SERVER=redpanda:9092

# ========================================
# Traefik настройки
# ========================================

TRAEFIK_ACME_EMAIL=admin@example.com

# ========================================
# Опциональные настройки
# ========================================

# MinIO (файловое хранилище) - закомментировано, раскомментируйте если нужно
# MINIO_URL=http://minio:9000
# MINIO_USER=minioadmin
# MINIO_PASSWORD=minioadmin
# MINIO_BUCKET=pingtower-files

# FTP (для загрузки nodelist файлов) - закомментировано, раскомментируйте если нужно
# FTP_HOST=ftp.example.com
# FTP_USER=username
# FTP_PASSWORD=password
# FTP_DOWNLOAD_FROM_YEAR=2024

# GitHub (для приватных зависимостей) - закомментировано, раскомментируйте если нужно
# GITHUB_USERNAME=your-username
# GITHUB_TOKEN=your-token

# ========================================
# Логирование и JVM
# ========================================

LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# JVM настройки для всех сервисов
JAVA_OPTS=-Xmx512m -Xms256m

# Отдельные настройки для сервисов с большими требованиями к памяти
STATISTICS_JAVA_OPTS=-Xmx1g -Xms512m